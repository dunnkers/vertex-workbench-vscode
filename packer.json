{
    "variables": {
        "project_id": "playground-jdruiter-257009"
    },
    "builders": [
        {
          "type": "googlecompute",
          "project_id": "{{user `project_id`}}",
          "machine_type": "n1-standard-2",
          "source_image_project_id": "ubuntu-os-cloud",
          "source_image_family": "ubuntu-2004-lts",
          "region": "europe-west1",
          "zone": "europe-west1-b",
          "image_description": "Custom Vertex image with OpenVSCode-server",
          "image_family": "vertex-ubuntu-vscode",
          "image_name": "vertex-ubuntu-vscode-latest",
          "disk_size": 100,
          "ssh_username": "ubuntu",
          "network": "default",
          "subnetwork": "default"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./bootstrap",
            "destination": "/tmp/bootstrap"
        },
        {
            "type": "shell",
            "inline": [
                "sudo bash /tmp/bootstrap/bootstrap.sh",
                "rm -rf /tmp/bootstrap"
            ]
        }
    ]
}
