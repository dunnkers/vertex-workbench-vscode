{
    "builders": [
        {
          "type": "googlecompute",
          "project_id": "{{user `project_id`}}",
          "machine_type": "n1-standard-2",
          "source_image_project_id": "ubuntu-os-cloud",
          "source_image_family": "ubuntu-2004-lts",
          "region": "europe-west1",
          "zone": "europe-west1-b",
          "image_description": "Custom Vertex Workbench image with OpenVSCode-server, Pyenv and Poetry.",
          "image_family": "vertex-ubuntu-vscode",
          "image_name": "vertex-ubuntu-vscode-latest",
          "disk_size": 100,
          "ssh_username": "ubuntu",
          "network": "{{user `project_id`}}",
          "subnetwork": "{{user `project_id`}}",
          "tags": ["packer"]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./bootstrap",
            "destination": "/tmp/bootstrap"
        },
        {
            "type": "shell",
            "inline": [
                "sudo bash /tmp/bootstrap/bootstrap.sh",
                "rm -rf /tmp/bootstrap"
            ]
        }
    ]
}
